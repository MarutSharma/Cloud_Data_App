<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.clouddataapp.ui.home.HomeViewModel" />
    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"

            android:layout_width="match_parent"
            android:layout_height="400dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:layout_scrollInterpolator="@android:anim/decelerate_interpolator"

                app:toolbarId="@+id/toolbar">

                <ImageView
                    android:id="@+id/app_bar_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    app:load_image="@{viewModel.selectedProduct.imgsrc}" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_anchor="@+id/nestedScrollView"
            app:layout_anchorGravity="center"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="34dp"
                        android:layout_height="40dp"
                        android:layout_weight="2"
                        app:srcCompat="@drawable/title" />

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@{viewModel.selectedProduct.name}"
                        android:layout_weight="8"
                        android:fontFamily="@font/audiowide"
                        android:gravity="center_vertical"
                        android:paddingLeft="6dp"
                        android:textSize="20sp"
                        tools:text="Title" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="41dp"
                        android:layout_height="40dp"
                        android:layout_weight="2"
                        app:srcCompat="@drawable/brand" />

                    <TextView
                        android:id="@+id/tvBrand"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@{viewModel.selectedProduct.brand}"
                        android:layout_weight="8"
                        android:fontFamily="@font/audiowide"
                        android:gravity="center_vertical"
                        android:paddingLeft="6dp"
                        android:textSize="20sp"
                        tools:text="Brand" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:paddingBottom="6dp">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="51dp"
                        android:layout_height="40dp"
                        android:layout_weight="2"
                        app:srcCompat="@drawable/options" />

                    <TextView
                        android:id="@+id/tvCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@{viewModel.selectedProduct.category}"
                        android:layout_weight="8"
                        android:fontFamily="@font/audiowide"
                        android:gravity="center_vertical"
                        android:paddingLeft="6dp"
                        android:textSize="20sp"
                        tools:text="Category" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="2"
                        app:srcCompat="@drawable/price" />

                    <TextView
                        android:id="@+id/tvPrdPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@{String.valueOf(viewModel.selectedProduct.price)}"
                        android:layout_weight="8"
                        android:fontFamily="@font/audiowide"
                        android:gravity="center_vertical"
                        android:paddingLeft="6dp"
                        android:textAlignment="viewStart"
                        android:textSize="20sp"
                        tools:text="Price" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@android:drawable/ic_input_add"
            tools:ignore="SpeakableTextPresentCheck" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>